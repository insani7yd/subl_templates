const int N = 2001;
 
int fact[N];
 
void precomp(){
    fact[0] = 1;
    for(int i = 1; i < N; i++)
    fact[i] = mul(fact[i - 1], i);
}
 
int P(int n, int k){
	if(n<k)return 0;
    return div(fact[n], fact[n - k]);
}

]]></content>
